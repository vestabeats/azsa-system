{
  "compilerOptions": {
    "composite": true, // Ensures that TypeScript treats this project as a composite project, useful for projects with dependencies.
    "outDir": "./dist", // Specifies the output directory for compiled files.
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo", // Path to the build info file for incremental compilation.
    "target": "ES2020", // Sets the JavaScript language version for the output.
    "useDefineForClassFields": true, // Uses `define` semantics for class fields as per ECMAScript standard.
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Specifies the libraries to include in the compilation (ES2020, DOM, and iterable types).
    "module": "ESNext", // Uses ESNext module system, compatible with modern bundlers.
    "skipLibCheck": true, // Skips type checking of declaration files, which can speed up the build process but may hide potential type issues.
    "noEmitOnError": false, // Ensures that the compiler still emits files even if there are errors (use cautiously).
    "suppressImplicitAnyIndexErrors": true, // Suppresses errors when indexing with `any` type.
    "allowJs": true, // Allows JavaScript files to be compiled alongside TypeScript files.
    "ignoreDeprecations": "5.0", // Ignores deprecated features as of TypeScript 5.0.
    "noImplicitAny": false, // Disables reporting on variables with implicit `any` type.
    "strict": false, // Disables strict type-checking options. Set to `true` for stricter type checks.
    "moduleResolution": "bundler", // Uses bundler-friendly module resolution, ideal for projects using modern bundlers like Webpack or Vite.
    "allowImportingTsExtensions": true, // Allows importing TypeScript files with `.ts` extensions.
    "resolveJsonModule": true, // Enables importing JSON modules directly.
    "isolatedModules": true, // Ensures each file is treated as an isolated module (useful for tooling and build processes).
    "moduleDetection": "force", // Forces detection of ES modules, even in mixed environments.
    "noEmit": true, // Ensures that the compiler only type-checks and does not generate output files.
    "jsx": "react-jsx", // Uses the new JSX transform introduced in React 17.

    /* Linting and Safety Options */
    "noUnusedLocals": true, // Flags unused local variables to help maintain clean code.
    "noUnusedParameters": true, // Flags unused function parameters to improve code quality.
    "noFallthroughCasesInSwitch": true // Ensures there is no fall-through between switch cases, helping prevent bugs.
  },

  "include": ["src"] // Specifies the directory containing the source code.
}
